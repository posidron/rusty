// Minimal String Function Test

// Test the string manipulation functions
var text = "hello";
print "Original string: " + text;
print "String length: " + as_string(length(text));

// Test get
var char = get(text, 1);
print "Character at index 1: " + char;

// Test set
var modified = set(text, 1, "a");
print "After set: " + modified;

// Test index (same as get)
var char2 = index(text, 2);
print "Character at index 2: " + char2;

// Test index_set (same as set)
var modified2 = index_set(text, 0, "j");
print "After index_set: " + modified2;
